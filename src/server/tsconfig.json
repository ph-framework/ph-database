{
    "compilerOptions": {
        "target": "es2020",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "types": ["@citizenfx/server", "@types/node"],
        "lib": ["es2020"],
        "resolveJsonModule": true,
        "paths": {
            "@server/*": ["./*"],
            "@modules/*": ["./modules/*"]
        }
    },
    "include": ["./**/*"],
    "exclude": ["**/node_modules", "**/__tests__/*"]
}
